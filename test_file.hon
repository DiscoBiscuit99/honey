# a simple declaration
let a: number = 3;

# complicated arithmetic expression
let a: number = 3 + 1 / 2 * (2 - 3);

# the simplest possible function (probably)
let f: (x: number) -> number = x;

# another function declaration
let f: (x: number) -> number = {
  let b: number = x * 2;
  let c: number = b * 3;
  c
};

# function call
let h: number = f(3 + 4);

# fibonacci
let fib: (n: number) -> number = {
  if n < 2 {
    1
  } else {
    fib(n - 1) + fib(n - 2)
  }
};
